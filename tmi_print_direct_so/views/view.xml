<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SALE ORDER VIEW INHERIT -->
    <record id="view_order_form_tmi_print_so_inherit" model="ir.ui.view">
        <field name="name">view.order.form.tmi.print.so.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='413']" position="after">
                <button name="print_direct" type="object" string="Print SO"
                        help = "Print this SO instantly to system printer without converting to PDF!"
                        groups="tmi_print_direct_so.group_to_so_print_direct" class="oe_highlight"/>


            </xpath>

        </field>
    </record>

    <!-- /SALE ORDER VIEW INHERIT -->

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.so_print_direct</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='proforma_configuration']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="so_print_direct_configuration">
                    <div class="o_setting_left_pane">
                        <field name="group_so_print_direct"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_so_print_direct"/>
                        <div class="text-muted">
                            Allows you to print SO direct to system printer
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>



</odoo>